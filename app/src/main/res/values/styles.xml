<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginScreen" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/rose</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MatButton" parent="Theme.MaterialComponents">
        <item name="colorPrimaryDark">@android:color/holo_red_light</item>
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorAccent">@android:color/holo_orange_light</item>
    </style>


</resources>
